<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bmc.AddStadiumActivity"
    tools:showIn="@layout/activity_add_stadium">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/stadium_icon"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/stadium_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/editTextColor"
            android:backgroundTint="@color/editTextColor">
            <EditText
                android:id="@+id/stadiumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Stadium Name"
                android:inputType="text"
                android:paddingBottom="10dp"
                />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/sport_icon"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/sport_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/editTextColor"
            android:backgroundTint="@color/editTextColor">

            <EditText
                android:id="@+id/sportName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sport Name"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/count_icon"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/no_of_courts"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/editTextColor"
                android:backgroundTint="@color/editTextColor">

                <EditText
                    android:id="@+id/noOfCourts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="No of Courts"
                    android:inputType="text"
                    android:textColorHint="@color/editTextColor"
                    android:backgroundTint="@color/editTextColor"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:text="Individual Booking timmings"
            android:textColor="@color/editTextColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/clock_icon"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/individual_timmings_from"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColorHint="@color/editTextColor"
            android:backgroundTint="@color/editTextColor">
            <EditText
                android:id="@+id/individualtimmingsfrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="from"
                android:inputType="time"
                android:focusableInTouchMode="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/individual_timmings_to"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/editTextColor"
            android:backgroundTint="@color/editTextColor">
            <EditText
                android:id="@+id/individualtimmingsto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="to"
                android:inputType="time"
                android:focusableInTouchMode="false"/>
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50px"
        android:layout_marginTop="10dp"
        android:text="Group Coach Booking timmings"
        android:textColor="@color/editTextColor"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:src="@drawable/clock_icon"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/group_timmings_from"
                android:layout_width="120dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/grouptimmingsfrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="from"
                    android:inputType="time"
                    android:focusableInTouchMode="false"
                    android:textColorHint="@color/editTextColor"
                    android:backgroundTint="@color/editTextColor"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/group_timmings_to"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <EditText
                    android:id="@+id/grouptimmingsto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="to"
                    android:onClick="showTimePickerDaialog"
                    android:inputType="time"
                    android:focusableInTouchMode="false"
                    android:textColorHint="@color/editTextColor"
                    android:backgroundTint="@color/editTextColor"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_stadium_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="@drawable/button"
                android:textColor="@color/white"

                android:text="Submit"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="90dp"
                android:padding="18dp"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:text="Locate Address"
                android:id = "@+id/btn_tap_to_pin"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
