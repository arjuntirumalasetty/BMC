<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bmc.ProfileActivity"
    tools:showIn="@layout/activity_profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/mounteun"
                android:alpha="0.8" />
            <include layout="@layout/profile_toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <com.alexzh.circleimageview.CircleImageView
                    android:id="@+id/banar1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/jaydeep"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="5dp"
                    app:view_shadowRadius="2dp"
                    app:view_shadowDx="2dp"
                    app:view_shadowDy="0dp"
                    app:view_borderWidth="2dp"
                    app:view_borderColor="#cccccc"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:background="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:background="#fff"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal">


                        <customfonts.MyTextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_weight="0.6"
                            android:padding="15dp"
                            android:text="NAME"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <customfonts.MyEditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_weight="1.3"
                            android:background="#00000000"
                            android:hint="James Bond"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.42"
                android:padding="10dp"
                android:text="Name"
                android:textSize="14dp" />
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:id="@+id/coach_name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Age"
                android:textSize="14dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:background="#00000000"
                android:padding="10dp"
                android:id="@+id/age"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="experience"
                android:textSize="14dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:background="#00000000"
                android:padding="10dp"
                android:id="@+id/experience_years"/>
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="Y"
                android:textSize="14dp"
                android:padding="10dp"
                />
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:background="#00000000"
                android:padding="10dp"
                android:id="@+id/experience_months"/>
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:text="M"
                android:textSize="14dp"
                android:padding="10dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Contact No"
                android:textSize="14dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="10"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="#00000000"
                android:padding="10dp"
                android:id="@+id/coach_phone_no"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <customfonts.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Email ID"
                android:textSize="14dp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>
            <customfonts.MyEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="#00000000"
                android:padding="10dp"
                android:id="@+id/coach_email"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>